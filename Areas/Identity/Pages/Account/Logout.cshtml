@page "/logout"
@model LogoutModel
@{
    ViewData["Title"] = "Đăng Xuất";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{

        //Kiểm tra thông tin User Có đang nhập  (tác dụng giống hàm         _signInManager.IsSignedIn(User))
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger">Bấm vào đây để đăng xuất</button>
            </form>
        }
        else
        {
            <p>Bạn đã đăng xuất.</p>
        }
    }
</header>